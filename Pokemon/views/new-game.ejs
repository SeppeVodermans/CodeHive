<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/CSS/reset.css" />
    <link rel="stylesheet" href="/CSS/base.css" />

    <link rel="stylesheet" href="/CSS/new-game.css" />
    <script defer src="/JS/new-game.js"></script>
    <script src="/JS/menu.js"></script>

    <title>New Game</title>
    <style>
      .trainer-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
      }

      .trainer-info img {
        max-width: 100px;
        border-radius: 50%;
        border: 2px solid #ffcc00;
      }
      /* Pokémon lijst */
      .pokemon-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
      }
      .pokemon-card-new-game {
        background: rgba(0, 0, 0, 0.5);
        border: 2px solid rgba(255, 204, 0, 0.7);
        padding: 15px;
        border-radius: 15px;
        text-align: center;
      }

      .pokemon-card-new-game img {
        max-width: 120px;
        height: auto;
      }

      .pokemon-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
      }
      .pokemon-card {
        font-family: "Press Start 2P", cursive;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        border: 2px solid rgba(255, 204, 0, 0.7);
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
        outline: none;
      }
      .pokemon-card:hover {
        transform: scale(1.05);
      }
      .trainer-info img {
        transition: opacity 0.3s ease-in-out;
      }
    </style>
  </head>
  <body>

    <div class="exit-menu-overlay">
      <div class="exit-menu-content">
        <div class="exit-menu-header">Pokémon</div>
        <ul class="exit-menu-items">
          <li class="exit-menu-item"><a href="#" id="continue-btn">Speel verder</a></li>
          <li class="exit-menu-item"><a href="#" id="save-btn">Spel opslaan</a></li>
          <li class="exit-menu-item"><a href="#" id="quit-btn">Spel verlaten</a></li>
        </ul>
      </div>
    </div>

    <div class="background"></div>
    <main>
      <div class="trainer-info">
        <img src="../Assets/Player/female.png" alt="Trainer Profile" />
        <div>
          <input
            type="text"
            name="trainer-name"
            id="trainer-name"
            placeholder="Enter Your Name"
          />
        </div>
        <div class="gender-selection">
          <label><input type="radio" name="gender" value="M" /> M</label>
          <label><input type="radio" name="gender" value="F" /> F</label>
        </div>
      </div>

      <h2>Choose an element</h2>
      <div id="pokemon-element">
        <form>
          <select id="starter-pokemon">
            <option value="">-- Select an Element --</option>
            <option value="Fire">Fire</option>
            <option value="Water">Water</option>
            <option value="Grass">Grass</option>
            <option value="Electric">Electric</option>
          </select>
        </form>
      </div>
      <section class="pokemon-list">
        <div class="pokemon-grid" id="pokemon-grid"></div>
      </section>

      <div id="name-section" style="display: none">
        <h3>Name your Pokémon:</h3>
        <input type="text" id="pokemon-name" placeholder="Enter a name" />
        <button onclick="savePokemonName()">Confirm Name</button>
      </div>

      <button onclick="saveTrainer()">Confirm Selection</button>
      <h3 id="output"></h3>
    </main>
  </body>
</html>
