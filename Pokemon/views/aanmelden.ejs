<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../CSS/reset.css" />
    <link rel="stylesheet" href="../CSS/global.css" />
    <link rel="stylesheet" href="../CSS/style.css" />
</head>
<header>
    <nav>
      <a href="../index.html"
        ><img src="../Assets/CodeHive-Logo.png" alt="CodeHive Logo"
      /></a>
    </nav>
  </header>
<body>
    <main>
    <div class="Form-Container">
        <form action="/register" method="POST">
          <p class="Log-In">Aanmelden</p>
          <label for="username">Gebruikersnaam<span class="required">*</span>:</label
          ><br />
          <input
            class="Input"
            type="text"
            placeholder="Type here..."
            name="naam"
            id="username"
          /><br />
          <label for="password">Wachtwoord<span class="required">*</span>:</label
          ><br />
          <input
            class="Input"
            type="password"
            placeholder="Type here..."
            name="naam"
            id="password"
          /><br />
          <a href="../views/forgot-password.ejs" class="forgot-password"
            >Wachtwoord vergeten?</a>
          <div class="Log-In-Button">
            <input type="submit" name="" value="Aanmelden" />
          </div>
          <p class="NewUser">Nieuwe Gebruiker</p>
          <div class="Log-In-Button">
            <a href="../views/register.ejs"></a>
            <input type="button" id="registerButton" value="Inschrijven" />
          </div>
        </form>
      </div>
    </main>
    <script src="../JS/aanmelden.js"></script>
</body>
</html>